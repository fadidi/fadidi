        USA
    .span4.offset2
      %h3 Contact Us
      %form{:method => "post", :action => "/send_contact_email"}
        %input.span4{:type => 'text', :placeholder => 'Your name', :name => 'name'}/
        %input.span4{:type => 'email', :placeholder => 'E-mail', :name => 'email'}/

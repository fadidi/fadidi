    %img#map-shadow{:src => 'img/shadow.png'}
  .row
    .span4.offset1
      %h3 Social Networks
      %p.active.lead
        %a.social-network.twitter
      %br
      %h3 Where to find us
      %p.lead
        Cle Elum, WA 98922
